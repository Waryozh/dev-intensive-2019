<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>

        <item name="colorToolbar">@color/color_primary</item>
        <item name="colorFab">@color/color_accent</item>
        <item name="colorItemBackground">@color/color_white</item>
        <item name="colorItemBackgroundSelected">@color/color_ltgray</item>
        <item name="colorSwipeBackground">@color/color_primary_dark</item>
        <item name="colorOnlineIndicator">@color/color_green</item>
        <item name="colorUnreadIndicator">@color/color_indicator</item>
        <item name="colorIconDone">@color/color_primary</item>
        <item name="colorArchiveBackground">@color/color_gray</item>
        <item name="colorChip">@color/color_primary_light</item>
        <item name="colorChipButton">@color/color_white</item>
        <item name="colorSnackbar">@color/color_primary</item>
        <item name="colorSnackbarText">@color/color_white</item>
        <item name="colorSnackbarActionText">@color/color_accent</item>
        <item name="colorTextPrimary">@color/color_primary</item>
        <item name="colorTextSecondary">@color/color_gray_dark</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
